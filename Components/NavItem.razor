<div class="nav-item px-3">
    <NavLink class="nav-link" href="@FormattedLink">
        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Text
    </NavLink>
</div>

@code {
    [Parameter] public required string Link { get; set; }
    [Parameter] public required string Text { get; set; }

    private string FormattedLink => Link.StartsWith("/") ? Link : $"/{Link}";
}